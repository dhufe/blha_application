FROM python:latest
ARG BUILD_DATE

LABEL build_version="Build-date:- ${BUILD_DATE}"
LABEL maintainer="Daniel Hufschl√§ger"

COPY frontend-scripts/app_frontend.py ./app/
COPY static/* ./app/static/
COPY templates/* ./app/templates/
